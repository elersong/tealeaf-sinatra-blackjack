<h1>Blackjack</h1>

<p>Welcome, <%= session[:player_name] %>!</p>
<div class="row">
  <p>Dealer Cards (<%= session[:dealer_total] %>)</p>
  <ul class="card-background">
    <% session[:dealer_cards].each do |card| %>
      <img src="images/cards/<%= card_to_image(card) %>">
    <% end %>
  </ul>
  
  <p>Player Cards (<%= session[:player_total] %>)</p>
  <ul class="card-background">
    <% session[:player_cards].each do |card| %>
      <img src="images/cards/<%= card_to_image(card) %>">
    <% end %>
  </ul>
</div>

<form action='game/player/hit' method='post'>
  <input type="submit" class="btn btn-success" value="Hit">
</form>

<form action='game/player/stay' method='post'>
  <input type="submit" class="btn btn-danger" value="Stay">
</form>